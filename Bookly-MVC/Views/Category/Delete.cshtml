@model Category

<div class="edit-container">
    <div class="edit-header">
        <h1 class="edit-title">Delete Category</h1>
        <div class="header-underline"></div>
    </div>

    <div class="edit-card shadow-lg">
        <form method="post" asp-action="Delete">
            <input asp-for="Id" hidden />

            <div class="card-header bg-gradient-primary text-white">
                <h5 class="mb-0 p-4">Delete Category</h5>
            </div>

            <div class="card-body">
                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label">Category Name</label>
                    <input asp-for="Name" disabled class="form-control input-focus" placeholder="Enter category name">
                </div>

                <div class="form-group mb-4">
                    <label asp-for="DisplayOrder" class="form-label">Display Order</label>
                    <input asp-for="DisplayOrder" disabled class="form-control input-focus" placeholder="Enter display order">
                </div>
            </div>

            <div class="card-footer bg-light d-flex justify-content-between">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-back">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-danger btn-save">
                    <i class="bi bi-check-circle"></i> Delete
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Add animation to form inputs
            $('.input-focus').focus(function() {
                $(this).parent().addClass('input-focused');
            }).blur(function() {
                $(this).parent().removeClass('input-focused');
            });

            // Button click animations
            $('.btn').click(function() {
                $(this).addClass('btn-click');
                setTimeout(() => {
                    $(this).removeClass('btn-click');
                }, 200);
            });

            // Highlight the card on load
            $('.edit-card').addClass('card-highlight');
            setTimeout(() => {
                $('.edit-card').removeClass('card-highlight');
            }, 1000);
        });
    </script>

    <style>
        .edit-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 15px;
        }

        .edit-header {
            margin-bottom: 2rem;
            text-align: center;
        }

        .edit-title {
            color: #2c3e50;
            font-weight: 700;
            position: relative;
            display: inline-block;
            margin-bottom: 0.5rem;
        }

        .header-underline {
            height: 4px;
            width: 100px;
            background: linear-gradient(to right, #3498db, #2ecc71);
            margin: 0 auto;
            border-radius: 2px;
        }

        .edit-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        .card-highlight {
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.3);
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, #3498db, #2c3e50);
        }

        .card-body {
            padding: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 5px;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

        .input-focused .form-control {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

        .input-focused .form-label {
            color: #3498db;
        }

        .card-footer {
            padding: 1.5rem;
            border-top: 1px solid rgba(0,0,0,0.05);
        }

        .btn {
            padding: 8px 20px;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-back {
            border: 1px solid #ced4da;
        }

            .btn-back:hover {
                background-color: #f8f9fa;
                transform: translateX(-3px);
                color: black;
            }

        .btn-save {
            background-color: #3498db;
            border: none;
        }

            .btn-save:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(41, 128, 185, 0.3);
            }

        .btn-click {
            transform: scale(0.95) !important;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .card-body {
                padding: 1.5rem;
            }

            .card-footer {
                flex-direction: column;
                gap: 10px;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}